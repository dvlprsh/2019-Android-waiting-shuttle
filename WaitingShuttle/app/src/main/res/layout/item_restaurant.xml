<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/item_restaurant_imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <View
        android:background="#3a000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:background="@drawable/edge"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@drawable/ic_local_dining_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_gravity="center_vertical"
            android:text="접수중"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
            android:id="@+id/item_restaurant_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"

            android:textColor="#ffffff"
            android:shadowRadius="5.0"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowColor="#000000"
            android:text="식당 이름"

            />
            <TextView
                android:id="@+id/item_restaurant_textView_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"

                android:textColor="#ffffff"
                android:shadowRadius="5.0"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowColor="#000000"
                android:text="식당 종류"

                />

            <TextView
                android:id="@+id/item_restaurant_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:textColor="#ffffff"
                android:shadowRadius="5.0"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowColor="#000000"
                android:text="주소"
                />
        </LinearLayout>




        <TextView
            android:id="@+id/item_restaurant_textView_waiting"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
android:gravity="center|center_vertical"
android:textColor="#ffffff"
            android:shadowRadius="5.0"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowColor="#000000"


android:textSize="20dp"
            android:text="대기인원\n0명"


            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>





    </android.support.v7.widget.CardView>
