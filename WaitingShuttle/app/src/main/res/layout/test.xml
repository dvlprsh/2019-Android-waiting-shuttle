<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

  >
    <LinearLayout
        android:background="@color/lightPurple"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/mediumDarkPurple"
            android:src="@drawable/location_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/navigation_textView"
            android:background="@color/lightPurple"
            android:text="현재위치"
android:textColor="#000000"
            android:paddingVertical="5dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navigation_mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"></RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_recylcerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>