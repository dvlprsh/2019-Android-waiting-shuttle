<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    tools:context=".mode.OfflineActivity">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:text="새로고침"
            android:id="@+id/offline_activity_imageview"
            android:layout_gravity="top"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="대기인원"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/offline_activity_textview"
            android:gravity="center"
            android:text="0 명"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="#000000"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대기인원과 전화번호를 입력해주세요"/>
        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textview_minus"
                android:textColor="#000000"

                android:padding="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
            <TextView
                android:id="@+id/textview_crew_number"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <Button
                android:id="@+id/textview_plus"
                android:textColor="#000000"

                android:padding="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>
        </LinearLayout>
        <EditText
            android:layout_gravity="center_horizontal"
            android:maxLength="13"
            android:id="@+id/edittext"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_1"
                android:text="1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_2"
                android:text="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_3"
                android:text="3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_4"
                android:text="4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_5"
                android:text="5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_6"
                android:text="6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_7"
                android:text="7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_8"
                android:text="8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:background="@color/cornflower"
                android:id="@+id/number_9"
                android:text="9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_margin="3dp"
                android:text="취소"
                android:id="@+id/button_backspace"
                android:background="@color/cornflower"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="3dp"
                android:id="@+id/number_0"
                android:background="@color/cornflower"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_margin="3dp"
                android:id="@+id/button_waiting"
                android:text="대기표 받기"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>